<%= form_with(model: post, local: false)  do |f| %>
      <%= render "devise/shared/error_messages", resource: @post %>
      <div class="form-group mt-3">
        <%= f.text_field :content, class:"form-control" %><br />
      </div>
      <div class="form-group mt-3"> 
        <p>Select Image</p>
        <%= f.file_field :image, class:"form-control" %>
        <br />
      </div>
      <div class="modal-footer">
       <button type="button" class="btn btn-secondary btn-sm close-modal" data-bs-dismiss="modal">Close</button>
        <%= f.submit class:"btn btn-primary btn-sm"%>
      </div>
  <% end %>
</div>
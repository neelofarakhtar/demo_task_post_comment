<tr id="postRow_<%= post.id %>">
    
    <td><%= post.content%></td><br>
    <td><image src ="<%= post.image %>" height = "100px">
   </td>
  
   <% if post.user == current_user %>
   <td> <%= link_to "Destroy", post_path(post), method: :delete, remote: true %></td>
   <td><%= link_to "edit post",edit_post_path(post),class: "btn btn-primary btn-sm mb-4", data: { remote: true } %></td>
   <td id="editPostForm_<%= post.id%>" style="display: none;"></td>
    <td><%= link_to "Show Post", post_path(post),class: "btn btn-primary btn-sm mb-4", data: { remote: true } %>  </td>
    <td id="seePostDetails_<%= post.id%>" style="display: none;"></td>
   
    <% else %>
    <td><%= link_to "Show Post", post_path(post),class: "btn btn-primary btn-sm mb-4", data: { remote: true } %>  </td>
    <td id="seePostDetails_<%= post.id%>" style="display: none;"></td>
    
    <% end %>
</tr> 